<div class="form-group">
    <%= f.label :sent_date, t('.sent_date') %>
    <br />
    <%= f.date_field(:sent_date, {class: "form-control", value: Date.today})%>
</div>

<div class="form-group">
  <%= label_tag(:sending_method, t('.access_request_sending_method')) %>
  <br />
  <%= f.select(:sending_method_id, options_for_select(SendingMethod.all.pluck(:name, :id), a.sending_method_id), {}, {class: "form-control", include_blank: false}) %>
</div>
