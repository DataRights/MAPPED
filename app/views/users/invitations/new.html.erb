<div class="container mt-5">
  <div class="row">
    <div class="col">
      <div class="panel-heading">
        <h4><%= t "devise.invitations.new.header" %></h4>
      </div>
      <div class="panel-body">

        <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
          <%= devise_error_messages! %>

        <% resource.class.invite_key_fields.each do |field| -%>
          <p><%= f.label field %><br />
          <%= f.text_field field %></p>
        <% end -%>

          <p><%= f.submit t("devise.invitations.new.submit_button"), class: 'btn btn-primary' %></p>
          <p><%= text_area_tag(:customized_invitation_content,nil,:size => "50x10") %> </p>
          <p><%= f.submit t("devise.invitations.new.submit_custom"), class: 'btn btn-secondary', :name => 'customized_invitation' %></p>

        <% end %>
      </div>
    </div>
  </div>
</div>
