<?php
        $json_plans = json_decode($plans, true);
        $json_features = json_decode($features, true);
        $json_plan_features = json_decode($plan_features, true);
        echo '<tr><th>Features</th>';
        foreach ($json_plans as $plan) {
            echo '<th>' . $plan['title'] . '</th>';
        }
        echo '</tr>';

        foreach ($json_features as $feature) {
            echo '<tr>';
            echo '<td>' . $feature['description'] . '</td>';
            foreach ($json_plans as $plan) {
            foreach ($json_plan_features as $pf) {
                if ($pf["feature_id"] == $feature["id"]) {
                if ($pf["plan_id"] == $plan["id"]) {
                        if (empty($pf['description'])) {
                            echo '<td><i class="fa fa-check-square-o fa-2x green"></i></td>';
                        } else {
                            echo '<td>' . $pf['description'] . '</td>';
                        }
                    }
                }
            }
        }
            echo '</tr>';
        }

        echo '</tbody></table>';
